---
import Layout from '../layouts/Layout.astro';
import TranslatorBox from '../components/TranslatorBox';
---

<Layout>
  <main class="min-h-screen flex flex-col">
    <div class="container mx-auto px-4 py-4 flex-grow">
      <!-- Contribution Alert -->
      <div class="w-full max-w-4xl mx-auto mb-8 text-center">
        <a href="/form" class="inline-block text-primary hover:text-primary/80 transition-colors text-sm align-center">
          ¿Deseas aportar a este proyecto? Da click aquí
        </a>
      </div>

      <header class="text-center mb-10">
        <h1 class="text-4xl font-bold text-primary mb-3 tracking-tight">
          DidxaLink
        </h1>
        <p class="text-gray-700 text-lg">
          Traductor Español - Zapoteco
        </p>
      </header>

      <TranslatorBox client:load />
    </div>
      
    <footer class="w-full py-6 bg-white border-t border-gray-200 mt-auto">
      <div class="container mx-auto px-4 text-center text-sm text-gray-600">
        <p>© 2025 DidxaLink - Preservando nuestra lengua</p>
      </div>
    </footer>
  </main>
</Layout>